<Window x:Class="SIMS_Projekat.View.PrikazIznajmljivanjaClan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMS_Projekat.View"
        mc:Ignorable="d"
        Title="PrikazIznajmljivanjaClan" Height="460" Width="800">
    <Grid Margin="2, 0, -2, 0">
        <DataGrid ItemsSource="{Binding Iznajmljivanja}" SelectedItem="{Binding SelectedIznajmljivanje}"
                  Margin="16, 12,16,104" SelectionMode="Single" AutoGenerateColumns="False" Name="iznajmljivanjaDataGrid" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Naziv knjige" Width="150" Binding="{Binding primerak.izdanjeKnjige.knjiga.nazivKnjige}"></DataGridTextColumn>
                <DataGridTextColumn Header="Primerak" Width="150" Binding="{Binding primerak.inventarniBroj}"></DataGridTextColumn>
                <DataGridTextColumn Header="Datum iznajmljivanja" Width="150" Binding="{Binding datumIznajmljivanja}"></DataGridTextColumn>
                <DataGridTextColumn Header="Datum vracanja" Width="150" Binding="{Binding datumVracanja}"></DataGridTextColumn>
            </DataGrid.Columns>
            
        </DataGrid>
        
    </Grid>
</Window>
